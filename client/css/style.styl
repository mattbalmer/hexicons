body
    background #222
    color #fff
    font-family Calibri, "Trebuchet MS", Arial, Helvetica, sans-serif

.btn
    padding .5em 1em
    line-height 1
    text-align center
    font-size 18px
    border 1px solid #ccc
    border-radius 3px
    cursor pointer
    display inline-block
    width auto

    &.fill
        display block
        width 100%

    &.primary
        color #fff
        background #337AB7
        border-color #2E6DA4

        &:hover
            background-color #286090
            border #204D74

.header
    margin 25px auto
    position relative
    color #222
    hexagon(600px, 50px, #eee)

    h1
        font-size 36px
        line-height 50px
        float left
        margin-left 10px

    h2
        font-size 18px
        line-height 50px
        float right
        margin-right 10px