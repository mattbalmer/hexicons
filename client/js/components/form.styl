@keyframes color-pulse
    0%
        background-color #fff
    20%
        background-color #4d62ff
    40%
        background-color #ee3344
    60%
        background-color #000000
    80%
        background-color #348e00

form
    padding-top 20px
    padding-left 10px

    .inputs
        width 260px

    .field
        font-size 18px
        margin-bottom .75em

        label
            font-weight bold
            font-size 18px
            display inline-block
            width 80px

        input
            width 180px
            box-sizing border-box

        input[type=text]
            border 1px solid #ccc
            border-radius 3px
            padding .5em
            margin 0
            line-height 1
            box-shadow 0 1px 1px rgba(0, 0, 0, 0.075) inset
            transition border-color 0.15s ease-in-out 0s, box-shadow 0.15s ease-in-out 0s

            &:focus
                outline none
                border-color #66AFE9
                box-shadow 0 1px 1px rgba(0, 0, 0, 0.075) inset, 0 0 8px rgba(102, 175, 233, 0.6)

    .cp
        margin-left 80px
        margin-top 10px
        margin-bottom -5px

    .result
        position absolute
        right 75px
        top 20px
        z-index -10
        opacity 0
        transition opacity .2s
        transition-delay .1s

        .preview
            width 260px
            height 260px
            background #fff
            border 1px solid #ccc
            border-radius 3px
            box-shadow 0 1px 1px rgba(0, 0, 0, 0.075) inset
            /*animation color-pulse 15s infinite*/

            img
                width 260px
                height 260px

        .info
            position absolute
            left 280px
            top 110px

    .btn[type=submit]
        background-color #337AB7
        border-color #2E6DA4
        color #fff

        &[disabled]
            pointer-events none
            cursor not-allowed
            box-shadow none
            opacity 0.65

    &.valid
        .btn[type=submit]
            color #fff
            cursor pointer

            &:hover
                background-color #286090
                border #204D74